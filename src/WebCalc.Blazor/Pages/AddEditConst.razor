@page "/addEditConst/{id:guid}/{constantName}/{constantValue:float}/{constantDescription?}"
@page "/addEditConst/{constantValue:float}"
@page "/addEditConst"

@using WebCalc.Application.Contracts.Constants
@using WebCalc.Blazor.Validation
@using WebCalc.Blazor.ViewModels.Pages;
@using WebCalc.Blazor.ViewModels.Pages.AddEditConst;
@using WebCalc.Domain.Constant.DomainManager
@using WebCalc.Services

@implements IDisposable
@inject IAddEditConstViewModel viewModel

<div id="add-edit-const-container">
    <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid justify-content-start ">
            <button class="btn btn-primary" @onclick="viewModel.NavigateBack">
                <i class="bi bi-arrow-left"></i>
            </button>
            <a class="navbar-brand mx-2">@viewModel.Title</a>
        </div>
    </nav>

    <EditForm class="m-2" Model="@viewModel.ValidationModel" OnValidSubmit="viewModel.SaveAsync">
        <DataAnnotationsValidator />
        <div class="add-edit-block mb-3">
            <label for="name-input" class="form-label">Name:</label>
            <InputText id="name-input" class="form-control" @bind-Value="viewModel.ValidationModel.Name"></InputText>
            <ValidationMessage For="@(()=>viewModel.ValidationModel.Name)"></ValidationMessage>
        </div>

        <div class="add-edit-block mb-3">
            <label for="value-input" class="form-label">Value:</label>
            <InputNumber id="value-input" class="form-control" @bind-Value="viewModel.ValidationModel.Value"></InputNumber>
            <ValidationMessage For="@(()=>viewModel.ValidationModel.Value)"></ValidationMessage>
        </div>

        <div class="add-edit-block mb-3">
            <label for="description-value" class="form-label">Description</label>
            <InputText id="description-value" class="form-control" @bind-Value="viewModel.ValidationModel.Description"></InputText>
        </div>

        <button type="submit" class="btn btn-primary">@viewModel.SaveButtonText</button>
    </EditForm>
</div>

<style>
    #operation-result-toast {
        font-size: 17px;
    }

    .material-symbols-outlined {
        padding: 2px;
    }

    #title {
        font-size: 25px;
        margin-left: 5px;
    }

    #buttons-container {
        display: flex;
    }

    #save-button {
        background-color: #4CAF50;
        width: 20%;
        height: auto;
        margin: 10px;
        font-size: 25px;
    }

    #save-back-container {
        display: flex;
        justify-content: center;
    }

    #add-edit-const-container {
        display: flex;
        width: 100%;
        flex-direction: column;
        row-gap: 20px;
    }

    .add-edit-block > label {
        font-size: 25px;
    }

    @@font-face {
        font-family: 'Toast_icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    #toast_types button {
        margin: 5px;
        min-width: 160px;
        max-width: 160px;
    }

    .toast-icons {
        font-family: 'Toast_icons' !important;
        speak: none;
        font-size: 55px;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    #toast_type .e-toast-icon.e-icons {
        height: auto;
        font-size: 30px;
    }

    .bootstrap5 #toast_type .e-toast-icon.e-icons,
    .bootstrap5-dark #toast_type .e-toast-icon.e-icons {
        height: 25px;
    }

    .toast-icons.e-success::before {
        content: "\e701";
    }

    #toast_types {
        text-align: center;
    }
</style>

@code {
    [Parameter]
    public Guid? Id { get; set; }

    [Parameter]
    public float? ConstantValue { get; set; }

    [Parameter]
    public string? ConstantName { get; set; }

    [Parameter]
    public string? ConstantDescription { get; set; }

    protected override void OnInitialized()
    {
        viewModel.PropertyChanged += OnViewModelPropertyChanged;
    }

    public void Dispose()
    {
        viewModel.PropertyChanged -= OnViewModelPropertyChanged;
    }

    protected override void OnParametersSet()
    {
        viewModel.ConstId = Id;

        viewModel.ConstName = ConstantName;
        viewModel.ConstValue = ConstantValue;
        viewModel.ConstDescription = ConstantDescription;
    }

    private void OnViewModelPropertyChanged(object? sender, EventArgs e)
    {
        StateHasChanged();
    }
}
